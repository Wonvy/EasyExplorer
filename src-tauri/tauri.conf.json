{
  "build": {
    "beforeDevCommand": "npm run serve & npm run sass",
    "beforeBuildCommand": "npm run sass:build",
    "devPath": "http://localhost:8080",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "EasyExplorer",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "protocol": {
        "asset": true,
        "assetScope": ["**"]
      },
      "dialog": {
        "all": true,
        "open": true,
        "save": true
      },
      "fs": {
        "all": true,
        "readDir": true,
        "readFile": true,
        "writeFile": true,
        "copyFile": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true,
        "exists": true,
        "scope": ["**"]
      },
      "path": {
        "all": true
      },
      "shell": {
        "all": false,
        "execute": true,
        "open": true,
        "sidecar": true,
        "scope": [
          {
            "name": "explorer",
            "cmd": "explorer",
            "args": true
          },
          {
            "name": "rundll32",
            "cmd": "rundll32.exe",
            "args": true
          }
        ]
      },
      "clipboard": {
        "all": true,
        "readText": true,
        "writeText": true
      },
      "window": {
        "all": true,
        "create": true,
        "center": true,
        "close": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.wonvy.easyexplorer",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; font-src 'self' data:; img-src 'self' data: asset: https://asset.localhost; frame-src 'self' asset: https://asset.localhost"
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "项目资源管理器",
        "width": 800,
        "height": 600
      }
    ]
  }
}

